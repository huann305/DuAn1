<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="15dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_from"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btntuNgay"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="Từ Ngày"
                    android:textColor="@color/white"
                    android:background="@color/main"
                    />
                <EditText
                    android:layout_width="0dp"
                    android:focusable="false"
                    android:layout_height="wrap_content"
                    android:hint="YYYY/MM/DD"
                    android:id="@+id/edttuNgay"
                    android:layout_weight="2"
                    android:textSize="18dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_to"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btndenNgay"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="Đến Ngày"
                    android:textColor="@color/white"
                    android:background="@color/main"
                    />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="YYYY/MM/DD"
                    android:focusable="false"
                    android:id="@+id/edtdenNgay"
                    android:layout_weight="2"
                    android:textSize="18dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trạng thái đơn hàng"
                android:textColor="@color/black"
                android:visibility="gone"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                />
            <Spinner
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                />
            <Button
                android:id="@+id/btndoanhThu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@color/main"
                android:text="Doanh thu"
                android:textSize="18dp"
                android:paddingHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thống kê đơn hàng"
                android:textColor="@color/main"
                android:textStyle="bold"
                android:textSize="19sp"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:id="@+id/tv_tongdonhang"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:id="@+id/tv_tongtien"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rcv"/>
    </LinearLayout>
</layout>
